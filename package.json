{
  "name": "react-elastic-dnd",
  "version": "0.0.0-development",
  "description": "React Elastic dnd",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:single": "jest",
    "semantic-release": "semantic-release",
    "start": "webpack serve --mode development --open --hot",
    "prebuild": "rimraf dist",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build": "npm-run-all --parallel build:*",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx}\"",
    "format": "prettier --check \"src/**/*.{js,jsx}\" --config ./.prettierrc",
    "format:fix": "prettier --write \"src/**/*.{js,jsx}\" --config ./.prettierrc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Akbar1909/react-elastic-dnd.git"
  },
  "keywords": [
    "dnd",
    "react",
    "react-dnd",
    "elastic",
    "drag-and-drop",
    "drag",
    "drop"
  ],
  "files": [
    "dist/index.js",
    "dist/index.umd.js",
    "dist/index.umd.min.js",
    "README.md"
  ],
  "author": "Akbar, Muhammadsodiq <akbarbobomurodov19092000@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Akbar1909/react-elastic-dnd/issues"
  },
  "homepage": "https://github.com/Akbar1909/react-elastic-dnd#readme",
  "devDependencies": {
    "@babel/cli": "7.20.7",
    "@babel/core": "7.20.12",
    "@babel/eslint-parser": "7.19.1",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "babel-loader": "9.1.2",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "7.0.0-beta.3",
    "chai": "4.3.7",
    "commitizen": "4.2.6",
    "css-loader": "6.7.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "ghooks": "2.0.4",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jsdoc": "4.0.0",
    "lint-staged": "13.1.0",
    "mini-css-extract-plugin": "2.7.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.2",
    "prop-types": "15.8.1",
    "semantic-release": "^20.0.0",
    "style-loader": "3.3.1",
    "url": "0.11.0",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged && npm run test:single"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write \"src/**/*.{js,jsx}\" --config ./.prettierrc",
      "eslint --fix \"src/**/*.{js,jsx}\"",
      "git add"
    ]
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
